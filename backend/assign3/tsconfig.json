{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "outDir": "build",
    "rootDir": "src",
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": ["src"]
}
