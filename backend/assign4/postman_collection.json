{
  "info": {
    "name": "Tasks API",
    "description": "Postman collection for the provided Express API (auth + tasks + me + health). Uses Bearer token (accessToken) and also supports cookie-based auth set by /auth/login.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variables": [
    { "key": "baseUrl", "value": "http://localhost:3000" },
    { "key": "username", "value": "user1" },
    { "key": "password", "value": "password123" },
    { "key": "accessToken", "value": "" },
    { "key": "taskId", "value": "" }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [{ "key": "token", "value": "{{accessToken}}", "type": "string" }]
  },
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "GET /api/health",
          "request": {
            "method": "GET",
            "auth": { "type": "noauth" },
            "url": {
              "raw": "{{baseUrl}}/api/health",
              "host": ["{{baseUrl}}"],
              "path": ["api", "health"]
            }
          }
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "POST /api/auth/register",
          "request": {
            "method": "POST",
            "auth": { "type": "noauth" },
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"{{username}}\",\n  \"password\": \"{{password}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "POST /api/auth/login (sets accessToken + cookies)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Login OK', function () {",
                  "  pm.response.to.have.status(200);",
                  "});",
                  "",
                  "let json = {};",
                  "try { json = pm.response.json(); } catch (e) {}",
                  "",
                  "if (json && json.token) {",
                  "  pm.collectionVariables.set('accessToken', json.token);",
                  "}",
                  "",
                  "// If your Postman cookie jar is enabled, the Set-Cookie headers will be stored automatically.",
                  "// This API also accepts Bearer token, so storing accessToken is usually enough."
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "auth": { "type": "noauth" },
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"{{username}}\",\n  \"password\": \"{{password}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "POST /api/auth/refresh (uses refresh cookie)",
          "request": {
            "method": "POST",
            "auth": { "type": "noauth" },
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{}" },
            "url": {
              "raw": "{{baseUrl}}/api/auth/refresh",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "refresh"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "let json = {};",
                  "try { json = pm.response.json(); } catch (e) {}",
                  "if (json && json.token) {",
                  "  pm.collectionVariables.set('accessToken', json.token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "POST /api/auth/logout (clears cookies)",
          "request": {
            "method": "POST",
            "auth": { "type": "noauth" },
            "url": {
              "raw": "{{baseUrl}}/api/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Me",
      "item": [
        {
          "name": "GET /api/me (auth required)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "GET /api/tasks (auth required)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/tasks",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tasks"]
            }
          }
        },
        {
          "name": "POST /api/tasks (auth required) (sets taskId)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Created', function () {",
                  "  pm.expect(pm.response.code).to.be.oneOf([201, 200]);",
                  "});",
                  "",
                  "let json = {};",
                  "try { json = pm.response.json(); } catch (e) {}",
                  "",
                  "if (json && json.task && (json.task._id || json.task.id)) {",
                  "  pm.collectionVariables.set('taskId', String(json.task._id || json.task.id));",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Test task from Postman\",\n  \"description\": \"Created by Postman collection.\",\n  \"category\": \"demo\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/tasks",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tasks"]
            }
          }
        },
        {
          "name": "GET /api/tasks/:id (NOTE: route is public in your code)",
          "request": {
            "method": "GET",
            "auth": { "type": "noauth" },
            "url": {
              "raw": "{{baseUrl}}/api/tasks/{{taskId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tasks", "{{taskId}}"]
            }
          }
        },
        {
          "name": "PATCH /api/tasks/:id (auth required)",
          "request": {
            "method": "PATCH",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": { "mode": "raw", "raw": "{\n  \"status\": \"completed\"\n}" },
            "url": {
              "raw": "{{baseUrl}}/api/tasks/{{taskId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tasks", "{{taskId}}"]
            }
          }
        },
        {
          "name": "DELETE /api/tasks/:id (auth required)",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{baseUrl}}/api/tasks/{{taskId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "tasks", "{{taskId}}"]
            }
          }
        }
      ]
    }
  ]
}
